Main.Activity.java
package com.example.model_3;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.ArrayAdapter;
import android.widget.AutoCompleteTextView;
import android.widget.ListView;
import androidx.appcompat.app.AppCompatActivity;
import java.util.ArrayList;

public class MainActivity extends AppCompatActivity {

    ListView listView;
    AutoCompleteTextView searchView;
    ArrayList<String> GameList;
    ArrayAdapter<String> adapter;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        listView = findViewById(R.id.listView);
        searchView = findViewById(R.id.autoCompleteTextView);

        GameList = new ArrayList<>();
        GameList.add("Cricket");
        GameList.add("Tennis");
        GameList.add("Football");
        GameList.add("Badminton");
        GameList.add("Kabaddi");
        GameList.add("WWE");
        GameList.add("Judo");
        GameList.add("Karate");
        GameList.add("Sumo Wrestling");
        GameList.add("Athletics");
        GameList.add("Swimming");
        GameList.add("Kung Fu");
        GameList.add("Basketball");
        GameList.add("Hockey");
        GameList.add("Table Tennis");
        GameList.add("Baseball");
        GameList.add("Rugby");
        GameList.add("Chess");
        GameList.add("Boxing");



        adapter = new ArrayAdapter<>(this, android.R.layout.simple_list_item_1, GameList);

        listView.setAdapter(adapter);
        searchView.setAdapter(adapter);

        listView.setOnItemClickListener(new AdapterView.OnItemClickListener() {
            @Override
            public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
                String selectedGame = GameList.get(position);
                Intent intent = new Intent(MainActivity.this, ProductDetailActivity.class);
                intent.putExtra("game_name", selectedGame);
                startActivity(intent);
            }
        });

        searchView.setOnItemClickListener(new AdapterView.OnItemClickListener() {
            @Override
            public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
                String selectedGame = adapter.getItem(position);
                Intent intent = new Intent(MainActivity.this, ProductDetailActivity.class);
                intent.putExtra("game_name", selectedGame);
                startActivity(intent);
            }
        });
    }
}

