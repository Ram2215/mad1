ProductDetailActivity.java
package com.example.model_3;

import android.os.Bundle;
import android.widget.TextView;
import androidx.appcompat.app.AppCompatActivity;

public class ProductDetailActivity extends AppCompatActivity {

    TextView GameDetails;
    TextView description;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_product_detail);

        GameDetails = findViewById(R.id.GameDetails);
        description = findViewById(R.id.description);

        String game_name = getIntent().getStringExtra("game_name");

        GameDetails.setText("Game: " + game_name);
        description.setText("Description :"+ "This is the game was selected by you!");

    }
}

AndroidManifest.xml
<activity android:name=".ProductDetailActivity"/>
